{
  "name": "stencila-website",
  "version": "1.0.0",
  "description": "Stencila's website at https://stenci.la",
  "main": "index.js",
  "scripts": {
    "build": "gulp build",
    "start": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/website.git"
  },
  "author": "https://github.com/stencila/website#contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/website/issues"
  },
  "homepage": "https://stenci.la",
  "dependencies": {},
  "devDependencies": {
    "@stencila/dev-config": "^1.4.60",
    "all-contributors-cli": "^5.4.1",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.1",
    "postcss-nested": "^4.2.3",
    "tailwindcss": "^1.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "semi": false,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ]
  },
  "renovate": {
    "extends": [
      "@stencila"
    ]
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
